<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_background">

    <EditText
        android:id="@+id/search_view_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="@dimen/height_input"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:background="@drawable/card_background"
        android:drawableStart="@drawable/icons8_search_24"
        android:drawableTint="@color/color_text_tertiary"
        android:drawablePadding="@dimen/spacing_medium"
        android:padding="@dimen/spacing_medium"
        android:hint="@string/search"
        android:maxLines="1"
        android:ellipsize="end"
        android:imeOptions="actionSearch"
        android:textSize="@dimen/font_size_body"
        android:textColor="@color/color_text_primary"
        android:textColorHint="@color/color_text_tertiary"
        android:importantForAutofill="no"
        android:inputType="text" />
    
    <androidx.recyclerview.widget.RecyclerView
        app:layout_goneMarginTop="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/search_view_edit_text"
        android:id="@+id/recycler_view_team_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_search_card" />



</androidx.constraintlayout.widget.ConstraintLayout>